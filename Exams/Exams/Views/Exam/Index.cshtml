@model IEnumerable<Exams.Models.ExamResult>

@{
    ViewData["Title"] = "Список результатов экзаменов";
}

<h2>Список результатов экзаменов</h2>

<p>
    <a asp-action="AddExam" asp-controller="Exam" class="btn btn-primary">Добавить результат экзамена</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Студент</th>
            <th>Преподаватель</th>
            <th>Предмет</th>
            <th>Номер билета</th>
            <th>Оценка</th>
            <th>Действия</th> <!-- Добавлено для кнопок действий -->
        </tr>
    </thead>
    <tbody>
        @foreach (var result in Model)
        {
            <tr>
                <td>@result.Id</td>
                <td>@result.Student?.Surname @result.Student?.Name</td>
                <td>@result.Teacher?.Name</td>
                <td>@result.Subject?.Name</td>
                <td>@result.ExamTicketNumber</td>
                <td>@result.Mark</td>
                <td>
                    <a asp-action="EditExam" asp-controller="Exam" asp-route-id="@result.Id" class="btn btn-warning">Редактировать</a>
                    <form asp-action="Delete" asp-controller="Exam" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@result.Id" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Вы уверены, что хотите удалить этот результат?');">Удалить</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>